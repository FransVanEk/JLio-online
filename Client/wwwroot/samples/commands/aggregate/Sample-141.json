{
  "description": "This sample shows aggregating with conditional filtering for targeted statistics.",
  "model": {
    "inputObjects": [
      {
        "jsonString": "{\r\n  \"transactions\": [\r\n    {\"type\": \"credit\", \"amount\": 100},\r\n    {\"type\": \"debit\", \"amount\": 50},\r\n    {\"type\": \"credit\", \"amount\": 200},\r\n    {\"type\": \"debit\", \"amount\": 75}\r\n  ]\r\n}",
        "name": "account"
      }
    ],
    "name": "Sample-141",
    "OutputObjects": [
      {
        "jsonString": "{\n  \"transactions\": [\n    {\"type\": \"credit\", \"amount\": 100},\n    {\"type\": \"debit\", \"amount\": 50},\n    {\"type\": \"credit\", \"amount\": 200},\n    {\"type\": \"debit\", \"amount\": 75}\n  ],\n  \"summary\": {\n    \"totalCredits\": 300,\n    \"totalDebits\": 125,\n    \"balance\": 175\n  }\n}",
        "name": "account"
      }
    ],
    "scriptText": "[\r\n  {\r\n    \"path\": \"$.account.summary.totalCredits\",\r\n    \"source\": \"$.account.transactions[?(@.type=='credit')]\",\r\n    \"field\": \"amount\",\r\n    \"function\": \"sum\",\r\n    \"command\": \"aggregate\"\r\n  },\r\n  {\r\n    \"path\": \"$.account.summary.totalDebits\",\r\n    \"source\": \"$.account.transactions[?(@.type=='debit')]\",\r\n    \"field\": \"amount\",\r\n    \"function\": \"sum\",\r\n    \"command\": \"aggregate\"\r\n  },\r\n  {\r\n    \"path\": \"$.account.summary.balance\",\r\n    \"value\": \"=subtract(@.summary.totalCredits,@.summary.totalDebits)\",\r\n    \"command\": \"add\"\r\n  }\r\n]"
  },
  "tags": [
    "aggregate",
    "etl"
  ],
  "title": "Conditional aggregate for balance calculation"
}